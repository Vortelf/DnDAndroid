
public class HalfOrc extends Races {
	boolean DarkVision;
	boolean Menacing;
	boolean RelentlessEndurance;
	boolean SavageAttacks;

	public HalfOrc() {
		Speed = 30;
		Height = 6.1;
		Weight = 211;
		Age = (int) Math.random() * 60 + 14;
		BonusST = new Statuses();
		BonusST = BonusST.initBonus("STR", 2, BonusST);
		BonusST = BonusST.initBonus("CON", 1, BonusST);
		
		DarkVision = true;
		Menacing = true;
		RelentlessEndurance = true;
		SavageAttacks = true;
	}
}
